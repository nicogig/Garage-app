<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:paddingBottom="0dp" tools:context=".MainActivity"
    android:id="@+id/activity_main">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="114dp"
        android:id="@+id/toolbar"
        android:minHeight="?attr/actionBarSize"
        android:background="@color/primary"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:id="@+id/linearLayout"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="36dp">

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="fill_parent"
                android:layout_height="116dp"
                android:gravity="center_horizontal">
            <!-- A CardView that contains a TextView -->

                <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view"
                android:layout_gravity="center"
                android:layout_width="400dp"
                android:layout_height="116dp"
                card_view:cardCornerRadius="4dp"
                android:elevation="4dp">

                <TextView
                    android:id="@+id/info_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/himain"
                    android:padding="16dp"
                    android:textSize="30dp" />

                    <TextView
                        android:id="@+id/info_text2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/greetingmain"
                        android:textSize="25dp"
                        android:paddingLeft="16dp"
                        android:paddingTop="64dp"
                        android:elevation="4dp" />
            </android.support.v7.widget.CardView>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:id="@+id/linearLayout2"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="36dp">

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:paddingTop="16dp"
                android:gravity="center_horizontal" >
                <!-- A CardView that contains a TextView -->



                <android.support.v7.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/card_view2"
                    android:layout_gravity="center"
                    android:layout_width="400dp"
                    android:layout_height="100dp"
                    card_view:cardCornerRadius="4dp"
                    android:elevation="4dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <android.support.design.widget.FloatingActionButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/fab"
                            android:src="@drawable/ic_vpn_key_white_36dp"
                            android:scaleType="fitCenter"
                            android:layout_marginLeft="16dp"
                            android:layout_centerVertical="true"
                            android:onClick="doOpen"
                            card_view:elevation="6dp" />



                        <TextView
                            android:id="@+id/info_text1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="@string/garagedoor"
                            android:textSize="25dp"
                            android:gravity="center_vertical"
                            android:paddingLeft="96dp"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentStart="true"
                            android:elevation="4dp" />
                    </RelativeLayout>

                </android.support.v7.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <ImageButton
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:id="@+id/imageButton"
        android:background="@drawable/cog_settings"
        android:layout_alignParentTop="true"
        android:layout_marginTop="8dp"
        android:onClick="goToSettings"
        android:layout_marginLeft="60dp" />

</RelativeLayout>
