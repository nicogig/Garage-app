    <!-- Settings Styles -->

    <style name="UserSettings" parent="Theme.AppCompat.Light.NoActionBar">

        <!-- Main theme colors -->
        <!--   your app branding color for the app bar -->
        <item name="colorPrimary">@color/cyan7</item>
        <!--   darker variant for the status bar and contextual app bars -->
